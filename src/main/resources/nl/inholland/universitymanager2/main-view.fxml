<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<HBox xmlns:fx="http://javafx.com/fxml/1" fx:id="layout" xmlns="http://javafx.com/javafx/17.0.2-ea"
      fx:controller="nl.inholland.universitymanager2.controller.MainController">
    <children>
        <VBox spacing="10.0" style="-fx-background-color: #00325a;">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="80.0"/>
            </padding>
            <children>
                <Button onAction="#onStudentButtonClick" minWidth="150"
                        style="-fx-text-fill: white;-fx-background-color: #123d69;-fx-padding: 5px;-fx-font-size: 18;"
                        text="Students"/>
                <Button onAction="#onTeacherButtonClick" minWidth="150"
                        style="-fx-text-fill: white;-fx-background-color: #123d69;-fx-padding: 5px;-fx-font-size: 18;"
                        text="Teachers"/>
            </children>
        </VBox>
    </children>
</HBox>